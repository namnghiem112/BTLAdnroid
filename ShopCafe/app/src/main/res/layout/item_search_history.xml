<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:id="@+id/rl_search_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/tv_search_hitory_product_text_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã Đặt Hàng :"
                android:textColor="@color/text_color"
                android:textSize="10sp">
            </TextView>

            <TextView
                android:id="@+id/tv_search_hitory_product_orderNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12341aaa"
                android:layout_marginLeft="3dp"
                android:textColor="@color/teal_200"
                android:textSize="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Ten  :"
                android:textColor="@color/text_color"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_search_hitory_product_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=" Nghiem Van Nam"
                android:textColor="@color/text_color"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Số điện thoại  :"
                android:textColor="@color/text_color"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_search_hitory_product_phone"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=" 0123456789"
                android:textColor="@color/text_color"
                android:textSize="15sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_search_hitory_product_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:text="Đã Thanh Toán"
            android:textColor="@color/teal_700"
            android:textSize="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/tv_search_hitory_product_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Ngày Đặt: "
                android:textSize="15sp"
                android:textColor="@color/text_color">
            </TextView>

            <TextView
                android:id="@+id/tv_search_hitory_product_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="null"
                android:textSize="15sp"
                android:textColor="@color/text_color">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Sản Phẩm: "
                android:textSize="15sp"
                android:textColor="@color/text_color">
            </TextView>

            <TextView
                android:id="@+id/tv_search_hitory_product_sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="null"
                android:textSize="15sp"
                android:textColor="@color/text_color">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Địa chỉ: "
                android:textSize="15sp"
                android:textColor="@color/text_color">
            </TextView>

            <TextView
                android:id="@+id/tv_search_hitory_product_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="null"
                android:textSize="15sp"
                android:textColor="@color/text_color">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tổng tiền: "
                android:textSize="15sp"
                android:textColor="@color/text_color">
            </TextView>

            <TextView
                android:id="@+id/tv_search_hitory_product_totalPtice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="null"
                android:textSize="15sp"
                android:textColor="@color/text_color">
            </TextView>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>